{
  "compilerOptions": {
    "module": "commonjs" /* Specify what module code is generated. */,
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2016",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "react"
  },
  "include": ["./src"],
  "exclude": ["**/*.test.ts"]
}
